  return (
    <div className="p-6 max-w-3xl mx-auto">
      <h1 className="text-3xl font-bold mb-4">Habit Pro</h1>
      <MotivationalMessage />
      <HabitForm />
      <HabitCharts />
    </div>
  );
}

export default App;
